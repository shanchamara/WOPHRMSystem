@model WOPHRMSystem.Models.ReceiptModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        /* Create two equal columns that floats next to each other */
        .column {
            float: left;
            width: 50%;
            padding: 10px;
            height: 3cm; /* Should be removed. Only for demonstration */
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
            width: 16cm;
        }
        /* Create two equal columns that floats next to each other */
        .column1 {
            float: left;
            width: 33%;
            padding: 10px;
            height: 4.2cm;
            font-size: 14px; /* Should be removed. Only for demonstration */
        }

        /* Clear floats after the columns */
        .row1:after {
            content: "";
            display: table;
            clear: both;
            width: 16cm;
        }

        .column2 {
            float: left;
            width: 50%;
            padding: 10px;
            height: 4.2cm; /* Should be removed. Only for demonstration */
        }

        /* Clear floats after the columns */
        .row2:after {
            content: "";
            display: table;
            clear: both;
            width: 16cm;
        }

        .column3 {
            float: left;
            width: 33%;
            padding: 10px;
            height: 1.8cm; /* Should be removed. Only for demonstration */
        }

        /* Clear floats after the columns */
        .row3:after {
            content: "";
            display: table;
            clear: both;
            width: 16cm;
        }


        .column4 {
            float: left;
            width: 30%;
            padding: 10px;
            height: 2.2cm; /* Should be removed. Only for demonstration */
        }

        .column5 {
            float: left;
            width: 70%;
            padding: 10px;
            height: 2.2cm; /* Should be removed. Only for demonstration */
        }

        /* Clear floats after the columns */
        .row4:after {
            content: "";
            display: table;
            clear: both;
            width: 16cm;
        }

        .column6 {
            float: left;
            width: 100%;
            padding: 10px;
            height: 2.2cm; /* Should be removed. Only for demonstration */
        }

        /* Clear floats after the columns */
        .row6:after {
            content: "";
            display: table;
            clear: both;
            width: 16cm;
        }



        table {
            border-collapse: collapse;
        }

        th, td {
            font-size: 14px;
            padding: 6px; /* Default text alignment for th and td */
        }

            td.right-align {
                text-align: right; /* Align text to the right for this class */
            }

        .address {
            display: grid;
            grid-template-rows: repeat(3, auto);
            max-width: 200px; /* Adjust the width as needed */
            word-wrap: break-word;
            margin: 8px 0px 0px 0px;
        }

        .amount-container {
            text-align: center;
            display: inline-block;
        }

        .line-top,
        .line-bottom {
            width: 100%;
            display: block;
        }

        .line-top {
            margin: 10px 0;
        }

        .line-bottom {
            border-top: 3px double black;
            margin: 10px 0;
        }

        .amount {
            display: inline-block;
            padding: 0 10px;
            position: relative;
            z-index: 1;
        }

        .invoice-table {
            width: 60%;
            border-collapse: collapse;
        }

            .invoice-table th, .invoice-table td {
                padding: 8px;
                text-align: left;
            }


        .no-border {
            border: none;
        }

        .amount {
            font-weight: bold;
            text-align: center;
        }

        .right-align {
            text-align: right;
        }
    </style>
</head>
<body>




    <div class="row1">
        <div class="column1">
            <p style="margin:55px 0px 0px 0px; text-align: left;">Received with Thanks from</p>
        </div>
        <div class="column1">

            <p style="margin:60px 0px 0px 0px; text-align: left;">@Model.CustomerName</p>
            <p class="address">
                @Model.Address
            </p>
            
        </div>
        <div class="column1">
            <div style="margin: 0px 0px 0px 18px; ">
                <table style="width:100%">
                    <tr>
                        <td>No:</td>
                        <td class="right-align">@Model.ReceiptNo</td>
                    </tr>
                    <tr>
                        <td>Date:</td>
                        <td class="right-align">@Model.Date.Value.ToShortDateString()</td>
                    </tr>

                </table>
            </div>
        </div>
    </div>

    <div class="row2">
        <div style="margin: 10px 0px 0px -10px; font-size: 15px; padding: 10px;">
            Being Settlement of Following

        </div>

    </div>
    <table class="invoice-table">
        <tr>
            <th>Invoice No.</th>
            <th>Date</th>
            <th>Amount (Rs.)</th>
            <th>Remarks</th>
        </tr>
        <tr>
            <td>@Model.InvoiceNo</td>
            <td>@Model.Date.Value.ToShortDateString()</td>
            <td>@Model.ReceiptAmount.Value.ToString("N2")</td>
            <td>@Model.Narration</td>
        </tr>
        <tr>
            <td colspan="4" class="no-border"></td>
        </tr>
        <tr>
            <td colspan="2" class="no-border">Cash/Cheque No.</td>

        </tr>
        <tr>
            <td colspan="2" class="no-border right-align">
                <div class="line-top"></div>
                <div class="amount">
                    Rs. @Model.ReceiptAmount.Value.ToString("N2")
                </div>
                <div class="line-bottom"></div>

            </td>
            <td colspan="2" class="no-border amount">Bank Transfer</td>
        </tr>

    </table>

    <div class="row3">
        <div class="column1">
            <div style="margin: 10px 0px 0px -10px; font-size: 15px; padding: 10px;">
                This receipt is valid only after the realization of the cheque
            </div>
        </div>
        <div class="column1"></div>
        <div class="column1">
            <div style="margin: 10px 0px 0px -10px; font-size: 15px; padding: 10px;">
                <strong> AUTHORISED SIGNATORY</strong>
            </div>
        </div>

    </div>




</body>
</html>

