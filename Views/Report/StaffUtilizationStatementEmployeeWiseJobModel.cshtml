        $(function () {
            $.validator.setDefaults({
                submitHandler: function () {

                    var List = JSON.parse(localStorage.getItem('rates')) || [];
                    debugger


                    let hasWarning = false;

                    if (List.length === 0) {
                        Swal.fire({
                            title: 'Warning!',
                            text: 'Employees is not defined.',
                            icon: 'warning',
                            confirmButtonText: 'OK'
                        });
                        hasWarning = true; // Set flag to true
                    }



                    if (hasWarning) {
                        return; // Exit function or prevent further execution
                    }



                    PostSelectionEmloyee();
                }
            });

            $('#quickForm').validate({
                rules: {

                    EmployeeWise: {
                        required: {
                            depends: function (element) {
                                return !$('#IsJob').is(':checked');
                            }
                        }
                    },

                    JobWise: {
                        required: {
                            depends: function (element) {
                                return !$('#IsEmployyee').is(':checked');
                            }
                        }
                    },
                    ToDate: {
                        required: true,
                    },
                    FromDate: {
                        required: true,
                    },
                },
                messages: {

                    // JobWise: "Please select the Employee",
                    //EmployeeWise: "Please select the Employee"
                },
                errorElement: 'span',
                errorPlacement: function (error, element) {
                    error.addClass('invalid-feedback');
                    element.closest('.form-group').append(error);
                },
                highlight: function (element, errorClass, validClass) {
                    $(element).addClass('is-invalid');
                },
                unhighlight: function (element, errorClass, validClass) {
                    $(element).removeClass('is-invalid');
                }
            });






        });


        document.addEventListener('DOMContentLoaded', function () {
            localStorage.clear();

            GetEmployeeSelectionList();
        })


        var GetEmployeeSelectionList = function () {

            //$("#loaderbody").removeClass('hide');
            $.ajax({
                type: "GET",
                url: "/Report/EmployeeSelection",
                //data: { Fk_employeeId: selectElement, Createby: 'User' },

                success: function (result) {

                    $("#staticBackdropBody1").html(result);

                },
            })
        }


        var PostSelectionEmloyee = function () {


            var masterModel = {
                JobWise: $("#IsJob").is(':checked'),             // Get checkbox status as boolean
                EmployeeWise: $("#IsEmployyee").is(':checked'),  // Get checkbox status as boolean
                FromDate: $("#FromDate input").val(),            // Access the input inside the date picker div
                ToDate: $("#ToDate input").val()

            };

            var rates = JSON.parse(localStorage.getItem('rates')) || [];
            debugger

            $.ajax({
                url: '/Report/StaffUtilizationStatementEmployeeWiseJob',
                type: 'POST',
                contentType: 'application/json; charset=utf-8',
                data: JSON.stringify({ masterModel: masterModel, rates: rates }),
                dataType: 'json',

                success: function (response) {
                    var data = $('#quickForm').serialize();
                    // Open the report in a new tab
                    window.open('/Report/ActionResult?' + data, '_blank');

                },
                error: function () {
                    alert("Error occurred while generating the report.");
                }

            })

        }
    </script>


