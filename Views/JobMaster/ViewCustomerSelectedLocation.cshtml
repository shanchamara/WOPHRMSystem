@model WOPHRMSystem.Models.ListLocationCustomerWise

<!-- DataTables -->
<link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

<style>
    .disable-height {
        height: auto !important;
    }
</style>
@{
    int Rows = 1;
}



<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <!-- /.card -->
            <div class="card">

                <!-- /.card-header -->
                <div class="card-body">
                    <div class="row no-print">
                        <div class="col-12">

                            <a onclick="GetCurrently_HaveLocation()" class="btn btn-primary float-right">
                                <i class="fas fa-plus"></i>
                                Add Location
                            </a>

                        </div>
                    </div>
                </div>
                <!-- /.card-body -->
            </div>

            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>


<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <!-- /.card -->
            <div class="card">
                <!--<div class="card-header">-->
                @*<h3 class="card-title">DataTable with default features</h3>*@
                <!--</div>-->
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="display:none;">Id</th> <!-- Hidden Id column -->
                                <th>Code</th>
                                <th>Narration</th>

                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model.JobMasterLocationTempModels)
                            {
                                <tr>
                                    <td style="display:none;">@s.Id</td> <!-- Hidden Id column -->
                                    <td>@s.Code</td>
                                    <td>@s.Narration</td>


                                    <td class="project-actions text-right">

                                        <a class="btn btn-danger btn-sm" onclick="PostDelete('@s.Id')">
                                            <i class="fas fa-trash"></i> Remove
                                        </a>
                                    </td>
                                </tr>
                                Rows++;
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>

<script>

      var PostDelete = function(Id) {
        Swal.fire({
            title: 'Are you sure?',
            text: "Do you really want to Remove this Record?",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#3085d6',
            cancelButtonColor: '#d33',
            confirmButtonText: 'Yes, delete it!'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    type: "DELETE",
                    url: "/JobMaster/Removelocation",
                    data: { ID: Id },

                    success: function(result) {
                        Swal.fire({
                            icon: result.Status,
                            title: result.Status,
                            text: result.Text
                        }).then((result) => {
                            var selectElement = document.getElementById("selectUnit").value;
                            $.ajax({
                                type: "GET",
                                url: "/JobMaster/ViewCustomerSelectedLocation",
                                data: { customerId: selectElement, Createby: 'User' },

                                success: function (result) {
                                    debugger
                                    $("#staticBackdropBody").html(result);

                                },
                            })
                        });
                    }
                });
            }
        });
    }


</script>
