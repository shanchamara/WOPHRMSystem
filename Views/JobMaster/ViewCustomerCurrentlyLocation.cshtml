@model WOPHRMSystem.Models.ListCurrentlyCustomerLocation

<!-- DataTables -->
<link rel="stylesheet" href="~/plugins/datatables-bs4/css/dataTables.bootstrap4.min.css">
<link rel="stylesheet" href="~/plugins/datatables-responsive/css/responsive.bootstrap4.min.css">
<link rel="stylesheet" href="~/plugins/datatables-buttons/css/buttons.bootstrap4.min.css">

<style>
    .disable-height {
        height: auto !important;
    }
</style>
@{
    int Rows = 1;
}

<div class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h3>The selected customer has these locations</h3>
            </div>

        </div>
    </div><!-- /.container-fluid -->
</div>



<div class="container-fluid">
    <div class="row">
        <div class="col-12">

            <!-- /.card -->
            <div class="card">
                <!--<div class="card-header">-->
                @*<h3 class="card-title">DataTable with default features</h3>*@
                <!--</div>-->
                <!-- /.card-header -->
                <div class="card-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th style="display:none;">Id</th> <!-- Hidden Id column -->
                                <th>Code</th>
                                <th>Narration</th>
                                @*<th>Status</th>*@
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var s in Model.LocationModels)
                            {
                                <tr>
                                    <td style="display:none;">@s.Id</td> <!-- Hidden Id column -->
                                    <td>@s.Code</td>
                                    <td>@s.Narration</td>
                                    @*<td>
                                            @if (s.IsActive)
                                            {
                                                <span class="badge bg-primary">Active</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">Not Active</span>
                                            }
                                        </td>*@

                                    <td class="project-actions text-right">
                                        <a class="btn btn-info btn-sm" onclick="AddLocation('@s.Narration','@s.Code','@s.Id')">
                                            <i class="fas fa-pencil-alt"></i> select
                                        </a>
                                        
                                    </td>
                                </tr>
                                Rows++;
                            }
                        </tbody>
                    </table>
                </div>
                <!-- /.card-body -->
            </div>
            <!-- /.card -->
        </div>
        <!-- /.col -->
    </div>
    <!-- /.row -->
</div>
